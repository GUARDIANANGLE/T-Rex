<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/new_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:orientation="vertical"
                android:padding="20dp">

                <GridLayout
                    android:id="@+id/GridLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    tools:context=".GridLayoutActivity" >

                    <TextView
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_gravity="left|top"
                        android:id="@+id/text_duration"
                        android:paddingRight="30dp"
                        style="@style/LastPositionTextViewStyle"
                        android:text="0:00:00"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_column="1"
                        android:layout_row="0"
                        android:layout_gravity="left|top"
                        android:id="@+id/text_distance"
                        style="@style/LastPositionTextViewStyle"
                        android:text="0,00 km"
                        android:textSize="32sp" />

                    <LinearLayout
                        android:layout_column="0"
                        android:layout_row="1"
                        android:paddingTop="5dp"
                        android:layout_gravity="left|top"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:alpha="0.7"
                            android:src="@drawable/ic_directions_run_white_24dp" />

                        <TextView
                            android:id="@+id/text_position_speed"
                            style="@style/LastPositionTextViewStyle"
                            android:text="0 km/h" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_column="1"
                        android:layout_row="1"
                        android:paddingTop="5dp"
                        android:layout_gravity="left|top"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:alpha="0.7"
                            android:src="@drawable/ic_terrain_white_24dp" />

                        <TextView
                            android:id="@+id/text_position_alt"
                            style="@style/LastPositionTextViewStyle"
                            android:text="0 m" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_column="0"
                        android:layout_row="2"
                        android:paddingTop="2dp"
                        android:layout_gravity="left|top"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:alpha="0.7"
                            android:src="@drawable/ic_gps_fixed_white_24dp" />

                        <TextView
                            android:id="@+id/text_position_accuracy"
                            style="@style/LastPositionTextViewStyle"
                            android:text="0 m" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_column="1"
                        android:layout_row="2"
                        android:paddingTop="2dp"
                        android:layout_gravity="left|top"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:alpha="0.7"
                            android:src="@drawable/ic_timelapse_white_24dp" />

                        <TextView
                            android:id="@+id/text_position_date"
                            style="@style/LastPositionTextViewStyle"
                            android:text="0:00:00" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_column="0"
                        android:layout_row="3"
                        android:paddingTop="2dp"
                        android:layout_gravity="left|top"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:alpha="0.7"
                            android:src="@drawable/ic_import_export_white_24dp" />

                        <TextView
                            android:id="@+id/text_http_response"
                            android:text="\?"
                            style="@style/LastPositionTextViewStyle"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_column="1"
                        android:layout_row="3"
                        android:paddingTop="2dp"
                        android:layout_gravity="fill_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:alpha="0.7"
                            android:src="@drawable/ic_location_city_white_24dp" />

                        <TextView
                            android:id="@+id/text_address"
                            android:text="..."
                            style="@style/LastPositionTextViewStyle"/>
                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/ic_play_arrow_white_36dp"
            app:backgroundTint="@color/accent"
            app:borderWidth="0dp"
            app:elevation="10dp"
            app:fabSize="normal"
            app:layout_anchor="@id/new_track"
            app:layout_anchorGravity="bottom|right|end" />

    </android.support.design.widget.CoordinatorLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee" />

</android.support.v4.widget.DrawerLayout>